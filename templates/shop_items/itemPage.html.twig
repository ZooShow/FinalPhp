{% extends 'base.html.twig' %}

{% block title %}{{ item.name }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1> {{ item.name }} </h1>
        <div class="row">
            <div class="col-auto d-none d-lg-block">
                <img src="{{ item.imgSrc}}">
            </div>
            <div class="col p-4 d-flex flex-column position-static">

                <h4>{{ item.name }}</h4>
                <h3 class="mb-1">{{ item.price }} руб</h3>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('korzinaAdd', {'id': item.id}) }}" class="btn btn-success mt-2" style="width: 200px;">
                        Добавить в корзину
                    </a>
                {% else %}
                    Добавить в корзину может только авторизованный пользователь! <br>
                    <a href="{{ path('login') }}">Авторизоваться</a>
                {% endif %}

            </div>

        </div>
    </div>
    </div>
{% endblock %}
