{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1> {{title}}</h1>
        {% set sum = 0 %}
        {% for item in items %}
            <div class="col-md-12">
                <div class="card mb-12 shadow-sm">
                    <div class="card-body">
                        <h4>{{ item.items.name }}</h4>

                        <h5>{{ item.items.price }} руб</h5>
                        {% set sum = sum + item.items.price %}
                    </div>
                </div>
            </div>
        {% endfor %}
        <hr>
        <h4>Итого: {{ sum }}</h4>
        <a href="{{ path('orderSee') }}" class="float-right btn btn-success mt-2">Оформить заказ</a>
    </div>
    </div>
{% endblock %}
